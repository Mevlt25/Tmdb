<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"/>


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/deneme"
                android:orientation="vertical"
                android:padding="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_transparan">

                    <EditText
                        android:id="@+id/main_text_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Placeholder"
                        android:inputType="text"
                        android:textSize="20dp"
                        android:background="#00000000"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:id="@+id/main_btn_search"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/search"
                        android:layout_gravity="center"
                        android:background="#00000000"/>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peaky Blinders"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:paddingVertical="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Wick is on the run after killing a member of the international assassins' guild, and with a $14 million price tag on his head, he is the target of hit men and women everywhere."
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:paddingBottom="20dp" />

                <Button
                    android:id="@+id/button_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watch Trial"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/play_btn_fill"
                    android:background="@drawable/bckgrn_red" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:text="What's Popular"
                android:textSize="24dp"
                android:paddingHorizontal="5dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free To Watch"
                android:textColor="#6B6B6B"
                android:textSize="24dp"
                android:paddingHorizontal="5dp"
                android:textStyle="bold"
                android:paddingVertical="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:paddingBottom="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#032541"
                android:padding="22dp">
                
                <LinearLayout
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THE BASIC"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:paddingBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About TMDB
                                    Contact Us
                                    Support Forums
                                    API
                                    System Status"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET INVOLVED"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:paddingBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contribution Bible
                                    3rd Party Applications
                                    Add New Movie
                                    Add New TV Show"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMMUNITY"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:paddingBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guidelines
                                    Discussions
                                    Leaderboard
                                    Twitter"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingVertical="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="MUVIME"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="© 2021 Tübitak. All rights reserved."
                    android:textColor="#545454"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/facebook"
                            android:paddingRight="7dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/instagram"
                            android:paddingRight="7dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/twitter"
                            android:paddingRight="7dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/youtube"
                            android:paddingRight="7dp"/>

                    </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of Use"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Terms of Use"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>