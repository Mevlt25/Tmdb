<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp" />


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/detail_bg_image"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/deneme"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/detail_movie_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/deneme"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/detail_name_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Outlaws (2021)"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/detail_realese_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2012-08-19"
                            android:textSize="12dp"
                            android:textColor="#FFFFFF"
                            android:paddingTop="20dp" />
                        <TextView
                            android:id="@+id/detail_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Trhiller"
                            android:textSize="12dp"
                            android:textColor="#FFFFFF" />
                        <TextView
                            android:id="@+id/detail_hour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2h 5m"
                            android:textSize="12dp"
                            android:textColor="#FFFFFF"
                            android:paddingBottom="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Overview"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/detail_overview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Introverted Girona student Nacho meets two delinquents from the city's Chinatown and gets caught up in a summer onslaught of burglaries and hold ups that will change his life."
                            android:textColor="#FFFFFF"
                            android:textSize="12dp"
                            android:paddingTop="10dp"/>

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Cast"
                android:textColor="#6B6B6B"
                android:textSize="24dp"
                android:paddingHorizontal="5dp"
                android:textStyle="bold"
                android:paddingVertical="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_top_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:paddingBottom="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Like This"
                android:textColor="#6B6B6B"
                android:textSize="24dp"
                android:paddingHorizontal="5dp"
                android:textStyle="bold"
                android:paddingVertical="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_more_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:paddingBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#032541"
                android:padding="22dp">

                <LinearLayout
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THE BASIC"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:paddingBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About TMDB
                                    Contact Us
                                    Support Forums
                                    API
                                    System Status"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET INVOLVED"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:paddingBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contribution Bible
                                    3rd Party Applications
                                    Add New Movie
                                    Add New TV Show"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMMUNITY"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:paddingBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guidelines
                                    Discussions
                                    Leaderboard
                                    Twitter"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingVertical="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="MUVIME"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="© 2021 Tübitak. All rights reserved."
                    android:textColor="#545454"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebook"
                        android:paddingRight="7dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/instagram"
                        android:paddingRight="7dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/twitter"
                        android:paddingRight="7dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/youtube"
                        android:paddingRight="7dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of Use"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Terms of Use"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>