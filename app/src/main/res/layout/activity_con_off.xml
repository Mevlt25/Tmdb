<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ConOffActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_transparan2">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/wifi_off"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İnternet bağlantınızı kontrol edip tekrar deneyiniz."
        android:textSize="20dp"
        android:padding="20dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:background="@drawable/bckgrn_black"
        android:textColor="@color/white"/>


</LinearLayout>